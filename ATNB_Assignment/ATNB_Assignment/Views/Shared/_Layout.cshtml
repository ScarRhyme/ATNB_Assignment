<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images.jpg">
    <title>BookStore</title>
    @Styles.Render("~/Content/frontcss")

</head>
<body>
    <div id="main-wrapper">
        @{
            Html.RenderPartial("_LayoutHeaderStorePage");
        }

        @RenderBody()
        <hr />
        <footer style="margin-left: 290px;">
            <p>&copy; @DateTime.Now.Year - BestSeller, Book store.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/frontjs")
    @Scripts.Render("~/bundles/ajax-cart")
    @RenderSection("scripts", required: false)
</body>
</html>
